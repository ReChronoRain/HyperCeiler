<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fan.springback.view.SpringBackLayout
        android:id="@+id/springview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scrollableView="@id/scrollview">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false">

            <LinearLayout
                android:id="@+id/scroll_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:id="@+id/version_card_click_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_logo_area_height" />

                <com.sevtinge.hyperceiler.about.DeviceInfoCard
                    android:id="@+id/device_info_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!--<include layout="@layout/app_device_layout" />-->

                <RelativeLayout
                    android:id="@+id/device_params"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/card_margin_edge"
                    android:layout_marginTop="@dimen/app_card_margin_edge"
                    android:paddingTop="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/description_grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        android:paddingStart="@dimen/preference_item_padding"
                        android:paddingEnd="@dimen/preference_item_padding" />
                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/prefs_container"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.0"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:smoothScrollbar="false" />

                <!--<TextView
                    android:id="@+id/disclaimer"
                    style="@style/Miuix.AppCompat.TextAppearance.List.Secondary.Preference"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/device_name_edit_usage_padding"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="@dimen/device_name_edit_usage_padding"
                    android:layout_marginBottom="@dimen/my_card_bottom_padding"
                    android:text="@string/my_device_disclaimer"
                    android:textSize="13sp"
                    android:visibility="gone" />-->
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </fan.springback.view.SpringBackLayout>

    <com.sevtinge.hyperceiler.about.VersionCard
        android:id="@+id/version_card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_logo_area_height" />

</FrameLayout>