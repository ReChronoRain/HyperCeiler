<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/custom_order_action_bar_padding_start"
    android:paddingEnd="@dimen/custom_order_action_bar_padding_end">

    <Button
        android:id="@+id/cancel_button"
        style="?attr/actionModeCancelButtonStyle"
        android:layout_width="@dimen/custom_order_button_size"
        android:layout_height="@dimen/custom_order_button_size"
        android:background="@drawable/icon_cancel"
        android:contentDescription="@android:string/cancel"
        android:text="" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.0">

        <TextView
            android:id="@android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:fontFamily="mipro-medium"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/custom_order_title"
            android:textColor="@color/color_on_surface"
            android:textSize="20sp" />
    </FrameLayout>

    <Button
        android:id="@+id/confirm_button"
        style="?attr/actionModeConfirmButtonStyle"
        android:layout_width="@dimen/custom_order_button_size"
        android:layout_height="@dimen/custom_order_button_size"
        android:background="@drawable/icon_confirm"
        android:contentDescription="@android:string/ok"
        android:text="" />
</LinearLayout>
