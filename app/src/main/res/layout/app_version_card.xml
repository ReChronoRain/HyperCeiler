<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_logo_area_height">

    <LinearLayout
        android:id="@+id/app_logo"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/app_logo_margin_top">

        <ImageView
            android:id="@+id/app_logo_view"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/app_text_logo_view"
            android:layout_width="@dimen/app_logo_width"
            android:layout_height="@dimen/app_logo_height"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/version_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/app_version_text"
            style="@style/TextAppearance.PreferenceList.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            android:fallbackLineSpacing="false"
            android:importantForAccessibility="no"
            android:includeFontPadding="false"
            android:scrollbars="none"
            android:textAlignment="viewStart"
            android:textColor="@color/app_version_text_color"
            android:textSize="14sp" />
    </LinearLayout>

    <fan.cardview.HyperCardView
        android:id="@+id/update_hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="@dimen/app_update_btn_margin_bottom"
        android:maxWidth="312dp"
        android:minWidth="248dp"
        android:minHeight="50dp"
        style="@style/AppUpdateCardStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@string/miuix_font_style_misans_demibold_font_family"
            android:scrollbars="none"
            android:text="@string/app_version_update"
            android:textColor="@color/app_update_text_color"
            android:textSize="17sp"
            android:textStyle="bold" />
    </fan.cardview.HyperCardView>
</RelativeLayout>
