<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@android:color/transparent"
    android:clipChildren="false"
    android:gravity="center_vertical"
    android:minHeight="@dimen/miuix_preference_item_min_height"
    android:paddingHorizontal="@dimen/preference_item_padding">

    <RelativeLayout
        style="@style/Widget.PreferenceItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.0"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fadingEdge="horizontal"
            android:hyphenationFrequency="full"
            android:maxLines="2"
            android:minWidth="60dp"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.PreferenceList"
            android:textSize="17sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:gravity="end"
        android:maxLines="1"
        android:paddingVertical="@dimen/miuix_preference_item_padding_top"
        android:textAppearance="@style/TextAppearance.PreferenceList.Secondary"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:layout_marginStart="@dimen/miuix_preference_item_padding_inner"
        android:gravity="center"
        android:importantForAccessibility="no"
        android:src="@drawable/miuix_preference_icon_arrow_right" />

</LinearLayout>
