<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/list_preferred_item_padding_start"
    android:paddingEnd="@dimen/list_preferred_item_padding_end">

    <EditText
        android:id="@+id/title"
        android:hint="@string/location_simulation_work_title"
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/offset"
        android:hint="@string/location_simulation_work_offset"
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/base_station"
        android:hint="@string/location_simulation_work_base_station"
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/longitude_latitude"
        android:hint="@string/location_simulation_work_longitude_latitude"
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/remarks"
        android:hint="@string/location_simulation_work_remarks"
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>