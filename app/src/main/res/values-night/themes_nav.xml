<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NavigatorActivityTheme" parent="@style/Theme.AppCompat.DayNight.Navigator">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="bgBlurOptions">splitActionBar</item>
        <item name="miuixColorBottomSurface">@color/miuix_design_default_color_surface_variant_dark</item>
        <item name="navigationFragmentStyle">@style/NaviFragmentTheme</item>
        <item name="recyclerViewCardStyle">@style/RecyclerViewCardStyle.DayNight</item>


        <item name="actionBarTitleEnableEllipsis">true</item>
        <item name="arrowRightFillColor">@color/miuix_appcompat_arrow_right_fill_color_dark</item>
        <item name="colorPrimary">@*android:color/primary_material_dark</item>
        <item name="colorPrimaryVariant">@android:color/white</item>
        <item name="preferenceCategoryBackground">@drawable/miuix_preference_category_background</item>
        <item name="preferenceCategoryTextColor">@color/miuix_preference_category_text_color_dark</item>
        <item name="preferenceItemBackground">@drawable/miuix_preference_item_background</item>
        <item name="preferencePrimaryTextColor">@color/miuix_preference_primary_text_dark</item>
        <item name="preferenceRightTextColor">@color/miuix_preference_right_text_color_dark</item>
        <item name="preferenceSecondaryTextColor">@color/miuix_preference_secondary_text_dark</item>
        <item name="preferenceTheme">@style/ThemeOverlay.Preference.Dark.OS2</item>
        <item name="seekBarPreferenceStyle">@style/Preference.SeekBarPreference</item>
        <item name="windowSplitActionBar">true</item>

        <item name="android:actionBarStyle">@style/ActionBar.ShowTitle</item>
        <item name="checkablePreferenceItemColorPressed">@color/miuix_preference_checkable_item_two_state_color_pressed_dark</item>
        <item name="checkablePreferenceItemColorPressedChecked">@color/miuix_preference_checkable_item_two_state_color_pressed_checked_dark</item>
        <item name="colorDividerLine">@android:color/transparent</item>
        <item name="preferenceCategoryStyle">@style/Preference.Category</item>
        <item name="preferenceItemPaddingEnd">@dimen/miuix_preference_item_padding_end</item>
        <item name="preferenceItemPaddingStart">@dimen/miuix_preference_item_padding_start</item>
    </style>

    <style name="NavigatorContentFragmentTheme" parent="Theme.AppCompat.DayNight.Content">
        <item name="android:windowBackground">@color/miuix_design_default_color_surface_variant_dark</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="actionBarBackground">@color/miuix_design_default_color_surface_variant_dark</item>
        <item name="actionbarSearchMaskColor">#20000000</item>
        <item name="bgBlurOptions">splitActionBar</item>
        <item name="colorPrimary">@color/miuix_design_default_color_surface_variant_dark</item>
        <item name="responsiveActionMenuViewStyle">@style/Widget.ResponsiveActionMenuView.Light</item>
    </style>


    <style name="Theme.Navigator.ContentChild" parent="Theme.AppCompat.DayNight.ContentChild">
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowBackground">@color/miuix_design_default_color_surface_variant_dark</item>

        <item name="windowExtraPaddingHorizontalEnable">true</item>
        <item name="windowExtraPaddingApplyToContentEnable">false</item>

        <item name="preferenceTheme">@style/ThemeOverlay.Preference.Light.OS2</item>
    </style>

    <style name="Theme.Navigator.ContentChild.Home">

        <item name="bgBlurOptions">splitActionBar</item>

        <item name="actionbarSearchMaskColor">@android:color/transparent</item>
        <item name="contentAutoFitSystemWindow">false</item>
        <item name="searchActionModeInputBackground">@android:color/transparent</item>

        <item name="android:actionBarStyle">@style/ActionBar.ShowTitle</item>
        <item name="checkablePreferenceItemColorPressed">@color/miuix_preference_checkable_item_two_state_color_pressed_dark</item>
        <item name="checkablePreferenceItemColorPressedChecked">@color/miuix_preference_checkable_item_two_state_color_pressed_checked_dark</item>
        <item name="colorDividerLine">@android:color/transparent</item>
        <item name="preferenceCategoryStyle">@style/Preference.Category</item>
        <item name="preferenceItemPaddingEnd">@dimen/miuix_preference_item_padding_end</item>
        <item name="preferenceItemPaddingStart">@dimen/miuix_preference_item_padding_start</item>
        <item name="recyclerViewCardStyle">@style/RecyclerViewCardStyle.DayNight</item>


        <item name="actionBarTitleEnableEllipsis">true</item>
        <item name="arrowRightFillColor">@color/miuix_appcompat_arrow_right_fill_color_dark</item>
        <item name="colorPrimary">@*android:color/primary_material_dark</item>
        <item name="colorPrimaryVariant">@android:color/white</item>
        <item name="preferenceCategoryBackground">@drawable/miuix_preference_category_background</item>
        <item name="preferenceCategoryTextColor">@color/miuix_preference_category_text_color_dark</item>
        <item name="preferenceItemBackground">@drawable/miuix_preference_item_background</item>
        <item name="preferencePrimaryTextColor">@color/miuix_preference_primary_text_dark</item>
        <item name="preferenceRightTextColor">@color/miuix_preference_right_text_color_dark</item>
        <item name="preferenceSecondaryTextColor">@color/miuix_preference_secondary_text_dark</item>
        <item name="seekBarPreferenceStyle">@style/Preference.SeekBarPreference</item>

    </style>

    <style name="Theme.Navigator.ContentChild.About">

    </style>

    <style name="NaviFragmentTheme" parent="@style/Theme.AppCompat.DayNight.NavigationFragment"/>
</resources>