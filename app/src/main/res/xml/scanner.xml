<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:myLocation="@string/scanner_hyper"
    app:quick_restart="com.xiaomi.scanner">
    <PreferenceCategory>
        <SwitchPreference
            android:title="@string/scanner_card"
            android:key="prefs_key_scanner_card"
            android:defaultValue="false" />

        <SwitchPreference
            android:title="@string/scanner_translation"
            android:key="prefs_key_scanner_translation"
            android:defaultValue="false" />

        <SwitchPreference
            android:title="@string/scanner_ocr"
            android:key="prefs_key_scanner_ocr"
            android:defaultValue="false" />

        <SwitchPreference
            android:title="@string/scanner_document"
            android:key="prefs_key_scanner_document"
            android:defaultValue="false" />

        <SwitchPreference
            android:title="@string/scanner_excel"
            android:key="prefs_key_scanner_excel"
            android:defaultValue="false"
            android:dependency="prefs_key_scanner_document" />

        <SwitchPreference
            android:title="@string/scanner_ppt"
            android:key="prefs_key_scanner_ppt"
            android:defaultValue="false"
            android:dependency="prefs_key_scanner_document" />

        <SwitchPreference
            android:title="@string/scanner_doc_ppt"
            android:key="prefs_key_scanner_doc_ppt"
            android:defaultValue="false" />

    </PreferenceCategory>

</PreferenceScreen>