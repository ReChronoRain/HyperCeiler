<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:myLocation="@string/security_center"
    app:myLocationHyper="@string/security_center_hyperos"
    app:myLocationPad="@string/security_center_pad">
    <PreferenceCategory android:title="@string/security_center_app_title">
        <DropDownPreference
            android:defaultValue="0"
            android:key="prefs_key_security_center_app_default_sort"
            android:summary="@string/security_app_sort_summary"
            android:title="@string/security_app_sort_title"
            app:entries="@array/app_sort"
            app:entryValues="@array/app_sort_value" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_disable_ban"
            android:title="@string/security_center_disable_ban" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_app_restrict"
            android:summary="@string/security_restrict_app_summary"
            android:title="@string/security_restrict_app_title" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_app_default_setting"
            android:summary="@string/security_disable_app_url_summary"
            android:title="@string/security_disable_app_url_title" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_aosp_app_info"
            android:title="@string/security_center_aosp_app_info"
            app:isPreferenceVisible="false"/>

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_aosp_app_manager"
            android:title="@string/security_center_aosp_app_manager"
            app:isPreferenceVisible="false"/>

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_app_disable"
            android:summary="@string/security_disable_app_summary"
            android:title="@string/security_disable_app_title" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_app_details"
            android:summary="@string/security_app_summary"
            android:title="@string/security_app_title" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/security_center_battery_title">
        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_show_battery_temperature"
            android:title="@string/security_center_show_battery_temperature" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_show_battery_health"
            android:summary="@string/only_new_version_can_do"
            android:title="@string/security_center_show_battery_health" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_unlock_screen_time"
            android:summary="@string/security_center_unlock_screen_time_desc"
            android:title="@string/security_center_unlock_screen_time" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_power_consumption_ranking"
            android:title="@string/security_center_power_consumption_ranking" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_super_wireless_charge"
            android:title="@string/security_center_super_wireless_charge" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_unlock_smart_charge"
            android:summary="@string/security_center_unlock_smart_charge_title_summary"
            android:title="@string/security_center_unlock_smart_charge_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="prefs_key_security_center_privacy"
        android:title="@string/security_center_privacy_title">
        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_ai_clipboard"
            android:title="@string/security_center_ai_clipboard" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_blur_location"
            android:title="@string/security_center_blur_location" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_get_number"
            android:title="@string/security_center_get_number" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/security_center_beauty_title">
        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_beauty_light_auto"
            android:title="@string/security_center_beauty_light_auto" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_beauty_face"
            android:title="@string/security_center_beauty_face" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_beauty_privacy"
            android:title="@string/security_center_beauty_privacy" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_beauty_pc"
            android:title="@string/security_center_beauty_pc" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/security_center_bubble_and_freeform_title">
        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_unlock_side_hide_freeform"
            android:summary="@string/security_center_unlock_side_hide_freeform_desc"
            android:title="@string/security_center_unlock_side_hide_freeform"
            app:isPreferenceVisible="false" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_remove_conversation_bubble_settings_restriction"
            android:title="@string/security_center_remove_conversation_bubble_settings_restriction" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/security_center_newbox_title">
        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_hide_sidebar"
            android:title="@string/security_center_hide_sidebar" />

        <SwitchPreference
            android:defaultValue="false"
            android:dependency="prefs_key_security_center_hide_sidebar"
            android:key="prefs_key_security_center_leave_open"
            android:title="@string/security_center_leave_open" />

        <SwitchPreference
            android:defaultValue="false"
            android:enabled="false"
            android:key="prefs_key_security_center_sidebar_line_color"
            android:title="@string/security_center_sidebar_line_color" />

        <moralnorm.preference.ColorPickerPreference
            android:defaultValue="-1294740525"
            android:dependency="prefs_key_security_center_sidebar_line_color"
            android:key="prefs_key_security_center_sidebar_line_color_default"
            android:title="@string/security_center_sidebar_line_color_default"
            app:showAlphaSlider="true" />

        <moralnorm.preference.ColorPickerPreference
            android:defaultValue="-6842473"
            android:dependency="prefs_key_security_center_sidebar_line_color"
            android:key="prefs_key_security_center_sidebar_line_color_dark"
            android:title="@string/security_center_sidebar_line_color_dark"
            app:showAlphaSlider="true" />

        <moralnorm.preference.ColorPickerPreference
            android:defaultValue="-872415232"
            android:dependency="prefs_key_security_center_sidebar_line_color"
            android:key="prefs_key_security_center_sidebar_line_color_light"
            android:title="@string/security_center_sidebar_line_color_light"
            app:showAlphaSlider="true" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_se_enable"
            android:title="@string/security_center_blur_model" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_blur_model_super"
            android:dependency="prefs_key_se_enable"
            android:disableDependentsState="true"
            android:title="@string/security_center_blur_model_super" />

        <SwitchPreference
            android:defaultValue="false"
            android:dependency="prefs_key_se_enable"
            android:key="prefs_key_security_center_invert_color"
            android:summary="@string/security_center_invert_color_summary"
            android:title="@string/security_center_invert_color" />

        <SeekBarPreferenceEx
            android:defaultValue="60"
            android:dependency="prefs_key_security_center_blur_model_super"
            android:key="prefs_key_security_center_blurradius"
            android:title="@string/security_center_blurradius"
            app:defaultValueText="@string/array_default"
            app:format="%d %%"
            app:maxValue="99"
            app:minValue="30"
            app:stepValue="1" />

        <moralnorm.preference.ColorPickerPreference
            android:defaultValue="-1"
            android:dependency="prefs_key_se_enable"
            android:key="prefs_key_security_center_color"
            android:title="@string/security_center_color"
            app:showAlphaSlider="true" />

        <Preference
            android:fragment="com.sevtinge.hyperceiler.ui.fragment.SecurityCenterSidebarFunctionFragment"
            android:key="prefs_key_security_center_sidebar_function_title"
            android:title="@string/security_center_sidebar_function_title" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/security_center_other_title">
        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_applock_pin_scramble"
            android:summary="@string/security_center_applock_pin_scramble_desc"
            android:title="@string/security_center_applock_pin_scramble" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_power_saver"
            android:title="@string/security_center_power_saver"
            android:summary="@string/security_center_power_saver_desc" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_score"
            android:summary="@string/security_score_summary"
            android:title="@string/security_score" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_skip_count_down_limit"
            android:summary="@string/security_center_skip_waiting_time_desc"
            android:title="@string/security_center_skip_waiting_time"
            app:isPreferenceVisible="true" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_disable_root_check"
            android:title="@string/security_center_disable_root_check" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_install_intercept"
            android:title="@string/security_center_install_intercept" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_unlock_fbo"
            android:title="@string/security_center_unlock_fbo" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_remove_low_battery_reminder"
            android:summary="@string/security_center_remove_low_battery_reminder_summary"
            android:title="@string/security_center_remove_low_battery_reminder_title" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_remove_open_app_confirmation_popup"
            android:summary="@string/security_center_remove_open_app_confirmation_popup_summary"
            android:title="@string/security_center_remove_open_app_confirmation_popup" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_disable_send_malicious_app_notification"
            android:title="@string/security_center_disable_send_malicious_app_notification" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_game_speed"
            android:summary="@string/security_center_game_speed_desc"
            android:title="@string/security_center_game_speed"
            app:isPreferenceVisible="false" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_bypass_simlock_miaccount_auth"
            android:summary="@string/security_center_bypass_simlock_miaccount_auth_desc"
            android:title="@string/security_center_bypass_simlock_miaccount_auth" />

    </PreferenceCategory>
</PreferenceScreen>