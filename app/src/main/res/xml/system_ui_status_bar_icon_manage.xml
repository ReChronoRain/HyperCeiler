<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="@string/system_ui_statusbar_iconmanage_wifi_title">

        <DropDownPreference
            android:title="@string/system_ui_status_bar_icon_wifi_standard"
            android:key="prefs_key_system_ui_status_bar_icon_wifi_standard"
            app:entries="@array/status_bar_icon_mode"
            app:entryValues="@array/status_bar_icon_mode_value"
            android:defaultValue="0"/>

        <DropDownPreference
            android:title="@string/system_ui_status_bar_icon_wifi_network_indicator"
            android:key="prefs_key_system_ui_status_bar_icon_wifi_network_indicator"
            app:entries="@array/status_bar_icon_mode"
            app:entryValues="@array/status_bar_icon_mode_value"
            android:defaultValue="0" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/system_ui_statusbar_iconmanage_bluetooth_title">

        <DropDownPreference
            android:title="@string/system_ui_status_bar_icon_bluetooth"
            android:key="prefs_key_system_ui_status_bar_icon_bluetooth"
            app:entries="@array/status_bar_icon_bluetooth"
            app:entryValues="@array/status_bar_icon_bluetooth_value"
            android:defaultValue="0"/>

    </PreferenceCategory>


    <PreferenceCategory android:title="@string/system_ui_statusbar_iconmanage_mobile_title">

        <DropDownPreference
            android:title="@string/system_ui_status_bar_icon_new_hd"
            android:key="prefs_key_system_ui_status_bar_icon_new_hd"
            app:entries="@array/status_bar_icon_mode"
            app:entryValues="@array/status_bar_icon_mode_value"
            android:defaultValue="0"/>

        <DropDownPreference
            android:title="@string/system_ui_status_bar_icon_small_hd"
            android:key="prefs_key_system_ui_status_bar_icon_small_hd"
            app:entries="@array/status_bar_icon_mode"
            app:entryValues="@array/status_bar_icon_mode_value"
            android:defaultValue="0"/>

        <DropDownPreference
            android:title="@string/system_ui_status_bar_icon_big_hd"
            android:key="prefs_key_system_ui_status_bar_icon_big_hd"
            app:entries="@array/status_bar_icon_mode"
            app:entryValues="@array/status_bar_icon_mode_value"
            android:defaultValue="0"/>


        <DropDownPreference
            android:title="@string/system_ui_status_bar_icon_mobile_network_signal_no_card"
            android:key="prefs_key_system_ui_status_bar_icon_mobile_network_signal_no_card"
            app:entries="@array/status_bar_icon_mode"
            app:entryValues="@array/status_bar_icon_mode_value"
            android:defaultValue="0"/>

        <DropDownPreference
            android:title="@string/system_ui_status_bar_icon_mobile_network_signal_card_1"
            android:key="prefs_key_system_ui_status_bar_icon_mobile_network_signal_card_1"
            app:entries="@array/status_bar_icon_mode"
            app:entryValues="@array/status_bar_icon_mode_value"
            android:defaultValue="0"/>

        <DropDownPreference
            android:title="@string/system_ui_status_bar_icon_mobile_network_signal_card_2"
            android:key="prefs_key_system_ui_status_bar_icon_mobile_network_signal_card_2"
            app:entries="@array/status_bar_icon_mode"
            app:entryValues="@array/status_bar_icon_mode_value"
            android:defaultValue="0"/>

        <DropDownPreference
            android:title="@string/system_ui_status_bar_icon_mobile_network_type"
            android:key="prefs_key_system_ui_status_bar_icon_mobile_network_type"
            app:entries="@array/status_bar_icon_mobile_network_type"
            app:entryValues="@array/status_bar_icon_mobile_network_type_value"
            android:defaultValue="0"/>

        <SwitchPreference
            android:title="@string/system_ui_status_bar_big_mobile_network_type"
            android:key="prefs_key_system_ui_status_bar_big_mobile_network_type"
            android:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/system_ui_statusbar_iconmanage_status_title">


        <DropDownPreference
            android:title="@string/system_ui_status_bar_icon_alarm_clock"
            android:key="prefs_key_system_ui_status_bar_icon_alarm_clock"
            app:entries="@array/status_bar_icon_alarm_clock"
            app:entryValues="@array/status_bar_icon_alarm_clock_value"
            android:defaultValue="0"/>

        <SeekBarPreference
            android:key="prefs_key_system_ui_status_bar_icon_alarm_clock_n"
            android:title="@string/system_ui_status_bar_icon_alarm_clock_n"
            android:defaultValue="0"
            app:minValue="0"
            app:maxValue="60"
            app:format="@string/system_ui_status_bar_icon_alarm_clock_n_format"
            app:showSeekBarValue="true" />

        <DropDownPreference
            android:title="@string/system_ui_status_bar_icon_nfc"
            android:key="prefs_key_system_ui_status_bar_icon_nfc"
            app:entries="@array/status_bar_icon_mode"
            app:entryValues="@array/status_bar_icon_mode_value"
            android:defaultValue="0"/>

        <DropDownPreference
            android:title="@string/system_ui_status_bar_icon_vpn"
            android:key="prefs_key_system_ui_status_bar_icon_vpn"
            app:entries="@array/status_bar_icon_mode"
            app:entryValues="@array/status_bar_icon_mode_value"
            android:defaultValue="0"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/system_ui_statusbar_iconmanage_notify_title">

        <SeekBarPreference
            android:key="prefs_key_system_ui_status_bar_notification_dots_maximum"
            android:title="@string/system_ui_status_bar_notification_dots_maximum"
            android:defaultValue="3"
            app:maxValue="5"
            app:showSeekBarValue="true" />

        <SeekBarPreference
            android:key="prefs_key_system_ui_status_bar_notification_icon_maximum"
            android:title="@string/system_ui_status_bar_notification_icon_maximum"
            android:defaultValue="0"
            app:minValue="0"
            app:maxValue="15"
            app:showSeekBarValue="true" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/system_ui_statusbar_iconmanage_battery_title">

        <SwitchPreference
            android:title="@string/system_ui_status_bar_battery_percent"
            android:key="prefs_key_system_ui_status_bar_battery_percent"
            android:defaultValue="false" />

        <SwitchPreference
            android:title="@string/system_ui_status_bar_battery_percent_mark"
            android:key="prefs_key_system_ui_status_bar_battery_percent_mark"
            android:defaultValue="false" />

        <SwitchPreference
            android:title="@string/system_ui_status_bar_battery_charging"
            android:key="prefs_key_system_ui_status_bar_battery_charging"
            android:defaultValue="false" />

        <Preference
            android:title="@string/system_ui_status_bar_battery_indicator_title">
            <intent
                android:targetPackage="com.sevtinge.cemiuiler"
                android:targetClass="com.sevtinge.cemiuiler.ui.systemui.statusbar.BatteryIndicatorActivity" />
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/system_ui_statusbar_iconmanage_left_title">

        <SwitchPreference
            android:title="@string/system_ui_status_bar_wifi_at_left"
            android:key="prefs_key_system_ui_status_bar_wifi_at_left"
            android:defaultValue="false" />

        <SwitchPreference
            android:title="@string/system_ui_status_bar_mobile_network_at_left"
            android:key="prefs_key_system_ui_status_bar_mobile_network_at_left"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/system_ui_statusbar_iconmanage_right_title">

        <SwitchPreference
            android:title="@string/system_ui_status_bar_network_speed_at_right"
            android:key="prefs_key_system_ui_status_bar_network_speed_at_right"
            android:defaultValue="false" />

        <SwitchPreference
            android:title="@string/system_ui_status_bar_alarm_clock_at_right"
            android:key="prefs_key_system_ui_status_bar_alarm_clock_at_right"
            android:defaultValue="false" />

        <SwitchPreference
            android:title="@string/system_ui_status_bar_nfc_at_right"
            android:key="prefs_key_system_ui_status_bar_nfc_at_right"
            android:defaultValue="false" />

        <SwitchPreference
            android:title="@string/system_ui_status_bar_volume_at_right"
            android:key="prefs_key_system_ui_status_bar_volume_at_right"
            android:defaultValue="false" />

        <SwitchPreference
            android:title="@string/system_ui_status_bar_zen_at_right"
            android:key="prefs_key_system_ui_status_bar_zen_at_right"
            android:defaultValue="false" />

        <PreferenceCategory android:layout="@layout/preference" />
    </PreferenceCategory>

</PreferenceScreen>