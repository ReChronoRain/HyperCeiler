<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:myLocation="@string/content_extension">
    <PreferenceCategory>
        <SwitchPreference
            android:title="@string/content_extension_unlock_taplus_title"
            android:key="prefs_key_content_extension_unlock_taplus"
            android:defaultValue="false" />

        <SwitchPreference
            android:title="@string/content_extension_browser"
            android:summary="@string/content_extension_browser_desc"
            android:key="prefs_key_content_extension_browser"
            android:defaultValue="false" />

        <SwitchPreference
            android:title="@string/content_extension_unlock_taplus_horizontal_title"
            android:key="prefs_key_content_extension_unlock_taplus_horizontal"
            android:defaultValue="false" />

        <SwitchPreference
            android:title="@string/content_extension_double_press"
            android:key="prefs_key_content_extension_double_press"
            android:defaultValue="false" />

        <SwitchPreference
            android:title="@string/content_extension_super_image"
            android:summary="@string/content_extension_super_image_summary"
            android:key="prefs_key_content_extension_super_image"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory>
        <DropDownPreference
            android:title="@string/content_extension_link_open_mode"
            android:summary="@string/content_extension_link_open_mode_desc"
            android:key="prefs_key_content_extension_link_open_mode"
            android:defaultValue="0"
            app:entries="@array/link_open_mode"
            app:entryValues="@array/link_open_mode_value" />

    </PreferenceCategory>

</PreferenceScreen>