<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ItemViewStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:minHeight">@dimen/item_view_height</item>
        <item name="android:paddingVertical">15dp</item>
        <item name="android:paddingHorizontal">@dimen/item_view_padding</item>
    </style>

    <style name="ItemViewStyle.Light">
        <item name="android:background">@drawable/item_view_background_light</item>

        <item name="titleTextColor">@color/item_view_title_color_light</item>
        <item name="summaryTextColor">@color/item_view_summary_color_light</item>
    </style>

    <style name="ItemViewStyle.Dark">
        <item name="android:background">@drawable/item_view_background_dark</item>

        <item name="titleTextColor">@color/item_view_title_color_dark</item>
        <item name="summaryTextColor">@color/item_view_summary_color_dark</item>
    </style>

    <style name="ItemViewStyle.DayNight" parent="ItemViewStyle.Light" />

    <style name="ItemViewTitleStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/item_view_title_size</item>
        <item name="android:fontFamily">@string/miuix_font_style_misans_medium_font_family</item>
    </style>

    <style name="ItemViewSummaryStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/item_view_summary_size</item>
    </style>


    <style name="LogViewerRecyclerViewCardStyle" parent="@style/RecyclerViewCardStyle.DayNight">
        <item name="cardGroupBackground">?itemViewBackgroundColor</item>
    </style>
</resources>