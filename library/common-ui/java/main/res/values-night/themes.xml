<resources>
    <style name="SubSettingsTheme" parent="Base.Theme.HyperCeiler.DayNight">

        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowBackground">@color/miuix_design_default_color_surface_variant_dark</item>

        <item name="contentAutoFitSystemWindow">false</item>
        <item name="windowExtraPaddingHorizontalEnable">true</item>
        <item name="windowExtraPaddingApplyToContentEnable">false</item>

        <item name="preferenceTheme">@style/ThemeOverlay.Preference.Dark.OS2</item>

        <item name="textColorDialogListItem">@color/miuix_appcompat_dialog_list_text_dark</item>
        <item name="dialogListPreferredItemHeight">@dimen/miuix_appcompat_dialog_list_preferred_item_height</item>

        <item name="dialogListItemBackground">@drawable/miuix_appcompat_list_item_bg_dialog_dark</item>
        <item name="dialogMultiChoiceListItemBackground">@drawable/miuix_appcompat_list_item_bg_multichoice_dark</item>
        <item name="dialogMultiChoiceListItemForeground">@drawable/miuix_appcompat_list_item_fg_multichoice_dark</item>

    </style>


    <style name="Base.Theme.HyperCeiler.DayNight" parent="Base.Theme.HyperCeiler">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="endActionMenuEnabled">true</item>
    </style>

    <style name="CrashTheme" parent="Base.Theme.HyperCeiler.DayNight">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="miuixColorPrimary">@color/black</item>
        <item name="actionBarBackground">@color/black</item>
    </style>

    <style name="Base.Theme.HyperCeiler" parent="Theme.AppCompat.DayNight">
        <item name="android:forceDarkAllowed">false</item>
        <item name="rebootIconColor">@color/white</item>
        <item name="preferenceTheme">@style/ThemeOverlay.Preference.Dark</item>
        <item name="SeekBarPreferenceCompatStyle">@style/Preference.SeekBarPreferenceCompat</item>
    </style>
</resources>
