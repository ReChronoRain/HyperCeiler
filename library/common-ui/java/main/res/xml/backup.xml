<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:myLocation="@string/backup"
    app:quick_restart="com.miui.backup">
    <PreferenceCategory>

        <SwitchPreference
            android:title="@string/backup_allow_all_apps"
            android:key="prefs_key_backup_allow_all_apps"
            android:defaultValue="false" />

        <SwitchPreference
            android:title="@string/backup_unlock_broken_screen_backup"
            android:key="prefs_key_backup_unlock_broken_screen_backup"
            android:defaultValue="false" />

    </PreferenceCategory>

</PreferenceScreen>