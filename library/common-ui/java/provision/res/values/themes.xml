<resources>
    <style name="SubSettingsTheme" parent="Base.Theme.HyperCeiler.DayNight">

        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowBackground">@color/miuix_design_default_color_surface_variant_light</item>

        <item name="contentAutoFitSystemWindow">false</item>
        <item name="windowExtraPaddingHorizontalEnable">true</item>
        <item name="windowExtraPaddingApplyToContentEnable">false</item>

        <item name="preferenceTheme">@style/ThemeOverlay.Preference.Light.OS2</item>

        <item name="textColorDialogListItem">@color/miuix_appcompat_dialog_list_text_light</item>
        <item name="dialogListPreferredItemHeight">@dimen/miuix_appcompat_dialog_list_preferred_item_height</item>

        <item name="dialogListItemBackground">@drawable/miuix_appcompat_list_item_bg_dialog_light</item>
        <item name="dialogMultiChoiceListItemBackground">@drawable/miuix_appcompat_list_item_bg_multichoice_light</item>
        <item name="dialogMultiChoiceListItemForeground">@drawable/miuix_appcompat_list_item_fg_multichoice_light</item>

    </style>

    <style name="ProvisionTheme" parent="@style/Theme.AppCompat.DayNight">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:listDivider">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>
