<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ProvisionPageTitleTextStyle">
        <item name="android:textSize">@dimen/provision_title_text_size</item>
        <item name="android:textColor">@color/provision_title_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:maxLines">3</item>
        <item name="android:fontFamily">mipro-light</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMinTextSize">8.0dp</item>
        <item name="android:autoSizeMaxTextSize">@dimen/provision_title_text_size</item>
    </style>

    <style name="ProvisionPageSubTitleTextStyle">
        <item name="android:textSize">@dimen/provision_subtitle_text_size</item>
        <item name="android:textColor">@color/provision_subtitle_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="ProvisionServiceTitleTextStyle">
        <item name="android:textSize">@dimen/provision_service_name_text_size</item>
        <item name="android:textColor">@color/provision_service_name_color</item>
        <item name="android:layout_marginBottom">@dimen/provision_service_name_margin_bottom</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ProvisionServiceDescTextStyle">
        <item name="android:textSize">@dimen/provision_service_desc_text_size</item>
        <item name="android:textColor">@color/provision_service_desc_color</item>
        <item name="android:textColorLink">@color/provision_item_policy_text_color</item>
    </style>

    <style name="ProvisionListSecondaryTextStyle">
        <item name="android:textSize">@dimen/miuix_appcompat_secondary_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/textColorListSecondary</item>
    </style>
</resources>