<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:myLocation="@string/sim_activation_service"
    app:quick_restart="com.xiaomi.simactivate.service">
    <PreferenceCategory>
        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_sim_activation_service_disable_activate_when_roaming"
            android:title="@string/sim_activation_service_disable_activate_when_roaming"
            android:summary="@string/sim_activation_service_disable_activate_when_roaming_desc"/>

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_sim_activation_service_disable_activate_when_roaming_radical"
            android:title="@string/sim_activation_service_disable_activate_when_roaming_radical"
            android:dependency="prefs_key_sim_activation_service_disable_activate_when_roaming"/>
    </PreferenceCategory>

</PreferenceScreen>