<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:myLocation="@string/security_center_battery_title"
    app:quick_restart="com.miui.securitycenter">
    <PreferenceCategory>
        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_show_battery_temperature"
            android:title="@string/security_center_show_battery_temperature" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_show_battery_health"
            android:summary="@string/only_new_version_can_do"
            android:title="@string/security_center_show_battery_health" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_secutity_center_battery_show_more_info"
            android:summary="@string/secutity_center_battery_show_more_info_desc"
            android:title="@string/secutity_center_battery_show_more_info" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_unlock_screen_time"
            android:summary="@string/security_center_unlock_screen_time_desc"
            android:title="@string/security_center_unlock_screen_time" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_power_consumption_ranking"
            android:title="@string/security_center_power_consumption_ranking" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_super_wireless_charge"
            android:title="@string/security_center_super_wireless_charge" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_battery_unlock_low_temp_ext_endurance"
            android:title="@string/security_center_battery_unlock_low_temp_ext_endurance" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="prefs_key_security_center_unlock_smart_charge"
            android:summary="@string/security_center_unlock_smart_charge_title_summary"
            android:title="@string/security_center_unlock_smart_charge_title" />

    </PreferenceCategory>
</PreferenceScreen>