<resources>
    <style name="DividerViewStyle">
        <item name="android:background">@color/card_tile_disabled_color_legacy</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.74dp</item>
        <item name="android:layout_marginTop">@dimen/divider_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/divider_margin_bottom</item>
    </style>

    <style name="ActionBar.ShowTitle" parent="@style/Widget.ActionBar">
        <item name="android:displayOptions">showTitle</item>
        <item name="tabIndicator">@null</item>
    </style>

    <style name="ActionBar.ShowTitleAndBack" parent="@style/Widget.ActionBar">
        <item name="android:displayOptions">homeAsUp|showTitle</item>
        <item name="android:homeAsUpIndicator">@drawable/miuix_appcompat_action_bar_back_light</item>
    </style>

    <style name="UpdateCardView.Border" parent="@style/HyperCardView.Light">
        <item name="android:shadowColor">@color/my_card_shadow_color</item>
        <item name="android:shadowDx">@dimen/my_card_shadow_dx</item>
        <item name="android:shadowDy">@dimen/my_card_shadow_dy</item>
        <item name="android:shadowRadius">@dimen/my_card_shadow_radius</item>
        <item name="cardBackgroundColor">@color/my_card_bg_color</item>
        <item name="strokeGradientColors">@array/my_card_stroke_gradient_colors_light</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>