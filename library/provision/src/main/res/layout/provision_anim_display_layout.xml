<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/provision_preview_layout"
    android:layout_width="@dimen/provision_preview_width"
    android:layout_height="@dimen/provision_preview_height"
    android:layout_gravity="center_horizontal"
    android:visibility="gone">

    <ImageView
        android:id="@+id/provision_preview_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <TextureView
        android:id="@+id/video_display_surfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</FrameLayout>
