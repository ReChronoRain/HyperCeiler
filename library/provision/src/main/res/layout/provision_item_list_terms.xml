<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/provision_license_item_start"
    android:paddingEnd="@dimen/provision_license_item_end">

    <TextView
        android:id="@+id/terms_name"
        style="@style/ProvisionServiceTitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/terms_title"
        style="@style/ProvisionListSecondaryTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/provision_list_terms_description_margin_start"
        android:layout_marginEnd="@dimen/provision_list_terms_description_margin_end"
        android:textColor="@color/provision_list_description_color" />

    <TextView
        android:id="@+id/list_terms_description"
        style="@style/ProvisionListSecondaryTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/provision_list_terms_description_margin_start"
        android:layout_marginEnd="@dimen/provision_list_terms_description_margin_end"
        android:layout_marginBottom="@dimen/provision_list_terms_description_margin_bottom"
        android:textColor="@color/provision_list_description_color"
        android:textSize="@dimen/provision_license_description_text_size" />
</LinearLayout>
