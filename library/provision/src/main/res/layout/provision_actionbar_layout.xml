<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/provision_lyt_actionbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/provision_actionbar_margin_top"
    android:minHeight="@dimen/provision_actionbar_height"
    android:paddingHorizontal="@dimen/provision_actionbar_padding_horizontal"
    android:paddingVertical="@dimen/provision_actionbar_padding_vertical">

    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="@dimen/provision_actionbar_icon_size"
        android:layout_height="@dimen/provision_actionbar_icon_size"
        android:contentDescription="@string/provision_back_description"
        android:src="?android:homeAsUpIndicator" />
</LinearLayout>
