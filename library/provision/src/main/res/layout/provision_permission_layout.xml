<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/miuix_theme_padding_horizontal_common">

        <com.sevtinge.hyperceiler.provision.widget.PermissionItemView
            android:id="@+id/network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/ProvisionListSecondaryTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/miuix_theme_content_padding_horizontal_common"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/provision_set_permission_later"
            android:textSize="13sp" />

        <com.sevtinge.hyperceiler.provision.widget.PermissionItemView
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.sevtinge.hyperceiler.provision.widget.PermissionItemView
            android:id="@+id/lsp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
</ScrollView>

