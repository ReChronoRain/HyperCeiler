<resources>

    <style name="ProvisionTheme" parent="@style/Theme.AppCompat.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">false</item>

        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">always</item>
        <item name="android:windowBackground">@color/miuix_appcompat_black</item>

        <item name="preferenceItemPaddingEnd">@dimen/miuix_preference_item_padding_end</item>
        <item name="preferenceItemPaddingStart">@dimen/miuix_preference_item_padding_start</item>
        <item name="preferencePrimaryTextColor">@color/miuix_preference_primary_text_light</item>

        <item name="android:listDivider">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="bottomSheetStyle">@style/BottomSheetModalStyle</item>

        <item name="groupButtonsPanelBackground">@android:color/transparent</item>
        <item name="groupButtonsPrimaryButtonStyle">@style/Widget.Button.Primary</item>
        <item name="groupButtonsSecondaryButtonStyle">@style/Widget.Button</item>
        <item name="groupButtonsTertiaryButtonStyle">@style/Widget.Button</item>
    </style>

    <style name="BottomSheetModalStyle">
        <item name="android:background">@color/miuix_color_white_solid_10</item>
        <item name="contentHeightMatchParent">true</item>
        <item name="miuixPaddingBottomSystemWindowInsets">false</item>
    </style>
</resources>
