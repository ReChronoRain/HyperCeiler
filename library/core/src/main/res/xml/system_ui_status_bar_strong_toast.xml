<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:myLocation="@string/system_ui_statusbar_strong_toast_title"
    app:quick_restart="com.android.systemui">
    <SwitchPreference
        android:defaultValue="false"
        android:key="prefs_key_system_ui_status_bar_hide_smart_strong_toast"
        android:title="@string/system_ui_status_bar_strong_toast_hide" />

    <PreferenceCategory
        app:isPreferenceVisible="false"
        android:title="@string/system_ui_status_bar_strong_toast_layout">
    </PreferenceCategory>

    <PreferenceCategory
        app:isPreferenceVisible="false"
        android:title="@string/system_ui_status_bar_strong_toast_text">
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/system_ui_status_bar_strong_toast_test">
        <Preference
            android:key="prefs_key_system_ui_status_bar_strong_toast_test_short_text"
            android:title="@string/system_ui_status_bar_strong_toast_test_short_text" />

        <Preference
            android:key="prefs_key_system_ui_status_bar_strong_toast_test_long_text"
            android:title="@string/system_ui_status_bar_strong_toast_test_long_text" />

    </PreferenceCategory>

</PreferenceScreen>