<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fan.nestedheader.widget.NestedHeaderLayout
        android:id="@+id/nested_header_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scrollableView="@id/scrollable_view_group"
        app:headerView="@id/search_bar"
        app:rangeOffset="1px"
        android:clipChildren="false">

        <fan.springback.view.SpringBackLayout
            android:id="@+id/scrollable_view_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            app:scrollableView="@id/app_list_rv">

            <fan.recyclerview.widget.RecyclerView
                android:id="@+id/app_list_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </fan.springback.view.SpringBackLayout>

        <include
            android:id="@+id/search_bar"
            layout="@layout/miuix_appcompat_search_stub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/provision_actionbar_padding_bottom"/>

    </fan.nestedheader.widget.NestedHeaderLayout>

    <ProgressBar
        android:id="@+id/am_progressBar"
        style="@style/Widget.ProgressBar.DayNight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</FrameLayout>
